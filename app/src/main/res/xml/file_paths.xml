<paths>
    <!-- Use app cache and files dirs; no storage permission needed -->
    <cache-path name="cache_images" path="images/" />
    <cache-path name="cache_posters" path="posters/" />
    <files-path name="files_images" path="images/" />
    <cache-path name="cache_all" path="." />

    <!-- Optional: external app-specific dirs (safe on Android 10+) -->
    <external-cache-path name="ext_cache_images" path="images/" />
    <external-files-path name="ext_pictures" path="Pictures/" />
</paths>
